<?xml version="1.0" encoding="utf-8"?>
<layout>
	<grid>
    <row>
      <button icon="playpause" onTap="playpause" color="blue" />
      <button icon="select" onTap="stopAndSave" color="blue" />
      <button icon="stop" onTap="stop" color="red" />
    </row>

    <row color="blue">
      <button icon="previous" onTap="previous" />
      <button icon="fullscreen" onTap="fullscreen" />
      <button icon="next" onTap="next" />
    </row>

    <row color="blue">
      <button icon="vdown" onTap="volumeDown" />
      <button icon="vmute" onTap="mute" />
      <button icon="vup" onTap="volumeUp" />
    </row>
   
    <row color="orange">
	    <button text="-15s" ontap="jumpBack" />
	    <button text="Sub on/off" ontap="toggleSubtitles" />
	    <button text="+15s" ontap="jumbForward" />
  	</row>
  </grid>
</layout>